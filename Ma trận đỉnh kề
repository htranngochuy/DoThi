
#include <iostream>
#include <string>

using namespace std;

const int V = 18;
int matrix[30][30]; 

string getTenTinh(int id) {
    switch (id) {
        case 1: return "Ha Noi";
        case 2: return "Hai Duong";
        case 3: return "Hai Phong";
        case 4: return "Uong Bi";
        case 5: return "Bac Giang";
        case 6: return "Bac Ninh";
        case 7: return "Thai Nguyen";
        case 8: return "Son Tay";
        case 9: return "Hoa Binh";
        case 10: return "Phu Ly";
        case 11: return "Hung Yen";
        default: return "";
    }
}

void khoiTaoMatrix() {
    for (int i = 1; i <= V; i++) {
        for (int j = 1; j <= V; j++) {
            matrix[i][j] = 0;
        }
    }
}

void themCanh(int u, int v) {
    matrix[u][v] = 1;
    matrix[v][u] = 1; 
}

void inMaTran() {
    cout << "--- MA TRAN KE ---\n\n";
    

    cout << "    ";
    for (int i = 1; i <= V; i++) {

        if (i < 10) cout << " " << i << " ";
        else cout << i << " ";
    }
    cout << "\n\n";

    for (int i = 1; i <= V; i++) {
        if (i < 10) cout << " " << i << "  ";
        else cout << i << "  ";

        for (int j = 1; j <= V; j++) {
            cout << " " << matrix[i][j] << " ";
        }
        cout << "\n";
    }
}

int main() {
    khoiTaoMatrix();


    themCanh(1, 2);  
    themCanh(1, 10); 
    themCanh(1, 9);  
    themCanh(1, 8);  
    themCanh(1, 7);  
    themCanh(1, 6);  

    themCanh(2, 11); 
    themCanh(11, 10);
    
    themCanh(6, 5);  
    themCanh(5, 4);  
    themCanh(6, 4);  
    
    themCanh(4, 3);  
    themCanh(3, 2);  

    inMaTran();
    

    return 0;
}
